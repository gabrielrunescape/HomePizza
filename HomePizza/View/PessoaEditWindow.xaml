      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None"  Foreground="#FF2196F3"
      mc:Ignorable="d" >

